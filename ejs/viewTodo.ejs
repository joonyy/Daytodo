<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Todo</title>
  <link rel="stylesheet" type="text/css" href="/main/static/styles/viewTodo.css">
</head>
<body>
  <!-- 버튼 그룹 -->
  <div class="buttons">
    <button class="button selected">날짜별</button>
    <button class="button">태그별</button>
    <button class="button">속성별</button>
  </div>

  <!-- 투두 리스트 -->
  <div class="todo-list">
    <div class="todo-item">
      <input type="checkbox">
      <div class="todo-title">Todo 1</div>
      <div class="tags">
        <span class="tag">Tag 1</span>
        <span class="tag">Tag 2</span>
        <span class="tag">Tag 3</span>
      </div>
    </div>
  </div>

  <div class="todo-list">
    <div class="todo-item">
      <input type="checkbox">
      <div class="todo-title">Todo 2</div>
      <div class="tags">
        <span class="tag">Tag 1</span>
        <span class="tag">Tag 2</span>
      </div>
    </div>
  </div>

  <div class="todo-list">
    <div class="todo-item">
      <input type="checkbox">
      <div class="todo-title">Todo 3</div>
      <div class="tags">
        <span class="tag">Tag 1</span>
      </div>
    </div>
  </div>

<script src="/main/static/js/viewTodo.js"></script>
</body>
</html>
